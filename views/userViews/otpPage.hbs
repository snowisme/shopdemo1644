{{> userHeader}}

  <div class="container main-container headerOffset">
    <div class="row">
      <div class="breadcrumbDiv col-lg-12">
        <ul class="breadcrumb">
          <li><a href="/">Trang chủ</a></li>
          <li class="active"> Tài khoản</li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-9 col-md-9 col-sm-7">
        <h1 class="section-title-inner"><span><i class="fa fa-lock"></i> Tài khoản</span></h1>
        <div class="row userInfo">
          <div class="col-xs-12 col-sm-6">
            <h2 class="block-title-2"> Xác mình OTP </h2>
            <form action="/signup" method="POST" role="form" class="regForm">
              <div class="form-group">
                <input id="OTP" type="hidden" minlength="5" class="form-control" value="{{currentOTP}}">
              </div>
              <div class="form-group">
                <label>OTP</label>
                <input name="OTP" title="OTP không chính xác" type="tel" class="form-control" placeholder="Nhập mã OTP"
                  required data-rule-equalTo="#OTP">
              </div>
              <div class="form-group">
                <label>Thời gian còn lại: </label>
                <span>
                  <h4 id="timer"></h4>
                </span>
              </div>
              <button id="verifyOTP" type="submit" class="btn btn-primary"> Xác minh OTP
              </button>
            </form>
            <form  action="/resendOTP" method="POST">
              <button id="ResendOTP" type="submit" class="btn btn-danger" style="display: none;"> Gửi lại OTP</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script>
      let a = 60
      h = document.getElementById('timer')
      let otpTimer = setInterval(() => {
        h.innerText = a--
        if (a === -1) {
          clearInterval(otpTimer);
          verifyOTP.style.display='none'
          ResendOTP.style.display='block'
        }
      }, 1000)
    </script>

  </div>

  <script src="assets/js/jquery/jquery-2.1.3.min.js"></script>
  <script src="assets/js/jquery.validate.js"></script>

  <script>
    $().ready(function () {
      $("#regForm").validate();
      $(".regForm").validate({
        errorLabelContainer: $(".regForm div.error")
      });
    });
  </script>

  {{> userFooter}}