{{> userHeader}}

<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="/">Trang chủ</a></li>
                <li><a href="/account">Tài khoản của tôi</a></li>
                <li class="active"> Danh sách đơn hàng</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner"><span><i class="fa fa-list-alt"></i> Danh sách đơn hàng </span></h1>
            <div class="row userInfo">
                <div class="col-lg-12">
                    <h2 class="block-title-2"> Danh sách đơn hàng của bạn </h2>
                </div>
                <div style="clear:both"></div>
                {{#if orderData}}
                <div class="col-xs-12 col-sm-12">
                    <table class="footable">
                        <thead>
                            <tr>
                                <th data-class="expand" data-sort-initial="true"><span
                                        title="table sorted by this column on load">Mã đơn hàng</span></th>
                                <th data-hide="phone,tablet" data-sort-ignore="true">Số lượng sản phẩm</th>
                                <th data-hide="default"> Giá</th>
                                <th data-hide="default" data-type="numeric">Ngày đặt hàng</th>
                                <th data-hide="phone,tablet"><strong></strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orderData}}
                            <tr>
                                <td>#{{this.orderNumber}}</td>
                                <td>{{this.cartData.length}}
                                    <small>sản phẩm</small>
                                </td>
                                <td>{{this.grandTotalCost}}đ</td>
                                <td data-value="78025368997">{{this.orderDateFormatted}}</td>
                                <td><a href="/account/orderList/orderStatus/{{this._id}}"
                                        class="btn btn-primary btn-sm">Xem tình trạng đơn hàng</a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <h1 class="col-lg-12">Không có đơn hàng nào!</h1>
                {{/if}}
                <div style="clear:both"></div>
                <div class="col-lg-12 clearfix">
                    <ul class="pager">
                        <li class="previous pull-right"><a href="/"> <i class="fa fa-home"></i> Trờ về cửa hàng
                            </a>
                        </li>
                        <li class="next pull-left"><a href="/account"> &larr; Trờ về tài khoản của tôi</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-5"></div>
    </div>
</div>
<script src="assets/js/jquery/jquery-2.1.3.min.js"></script>
<script src="assets/bootstrap/js/bootstrap.min.js"></script>
<script src="assets/js/footable.js" type="text/javascript"></script>
<script src="assets/js/footable.sortable.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $('.footable').footable();
    });
</script>

{{> userFooter}}